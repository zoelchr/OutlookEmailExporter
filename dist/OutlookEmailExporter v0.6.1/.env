# Logging-Stufe: 0=ERROR, 1=WARNING, 2=INFO, 3=DEBUG, 4=TRACE
DEBUG_LEVEL=3

# Logging-Ausgabe zusätzlich auf Console
LOG_TO_CONSOLE=false

# Pfad zur Log-Datei (optional relativer oder absoluter Pfad)
LOG_FILE=debug.log

# Exporteinstellungen
EXPORT_PATH=./logs

# Testmodus (kein Email-Export)
TEST_MODE=false

# Postfächer, die ignoriert werden sollen (durch Komma getrennt)
IGNORE_POSTFAECHER=Archiv, Testkonto, Kalender-Synchronisation

# Ordnernamen, die ignoriert werden sollen (durch Komma getrennt)
EXCLUDE_FOLDERNAMES=Kalender, Kontakte, Aufgaben, Notizen, Synchronisierungsproblem, PersonMetadata, Archiv, Gelöschte Elemente, Papierkorb, MeContact, ExternalContacts, RSS-Feeds

# Maximale Ordnertiefe (optional, Standard: kein Limit)
MAX_SEARCH_DEPTH=1

# Vordefinierte Exportpfade (max 5) in normaliserter Schreibweise für den Pfad, d.h. kein Backslash
EXPORT_TARGET_1=C:


# Maximale Anzahl der zuletzt verwendeten Verzeichnisse für einen Export
MAX_RECENT_DIRS=10

MAX_SAVED_EXPORT_TARGETS=20
MAX_ENV_EXPORT_TARGETS=5

KNOWNSENDER_FILE=./known_senders_private.csv

